# SkillSync Backend Environment Variables
# DO NOT COMMIT THIS FILE TO VERSION CONTROL
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://yourusername@localhost:5432/skillsync

# JWT Security
# Generate a secure key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
PORT=8000
ENVIRONMENT=development

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Google AI Configuration - Multiple API Keys for Load Balancing
# Get your API keys from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Gemini API Keys for different purposes (load balancing & rate limit handling)
# These keys are rotated automatically to prevent rate limiting
GEMINI_KEY_RESUME_PARSING=your-gemini-key-1
GEMINI_KEY_MATCHING_EXPLANATION=your-gemini-key-2
GEMINI_KEY_SKILLS_EXTRACTION=your-gemini-key-3
GEMINI_KEY_EMBEDDING_GENERATION=your-gemini-key-4
GEMINI_KEY_CANDIDATE_SUMMARY=your-gemini-key-5
GEMINI_KEY_INTERNSHIP_ANALYSIS=your-gemini-key-6
GEMINI_KEY_ACHIEVEMENT_EXTRACTION=your-gemini-key-7
GEMINI_KEY_FALLBACK_1=your-gemini-key-8
GEMINI_KEY_FALLBACK_2=your-gemini-key-9
GEMINI_KEY_FALLBACK_3=your-gemini-key-10

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./app/public/resumes

# AWS S3 Configuration (for cloud resume storage)
# Get your AWS credentials from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=skillsync-resumes
# If these are not set, resumes will be stored locally in UPLOAD_DIR

# Email Configuration (for daily summaries and notifications)
# SMTP Settings - Use Gmail SMTP or any other SMTP provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=gmail.com
SMTP_PASSWORD=password
SENDER_EMAIL=gmail.com
SENDER_NAME=SkillSync
# For Gmail: Create app password at https://myaccount.google.com/apppasswords
# Frontend URL for email links
FRONTEND_URL=http://localhost:3000
